<h1 class="i-sidebar-title h4 mt-4 theme-sidebar-header">
	{{#if logo}}
		<img class="i-sidebar-logo mr-2 theme-sidebar-header-logo" src="{{logo}}" height="40" alt="">
	{{/if}}
	<span class="theme-sidebar-header-title">{{name}}</span>
</h1>

<div class="relative mt-3 mb-2 px-0 theme-sidebar-search">
	<div class="i-search-input">
		<input id="search-filter" name="filter" type="search" placeholder="Search" class="form-control i-sidebar-item-filter">
		<label for="search-filter" class="search-input-icon icon-search"></label>
		<button type="button" class="i-search-input-reset" aria-label="Clear">
			<i class="icon-cross"></i>
		</button>
	</div>
</div>

<div class="theme-sidebar-categories">
	{{#each groups}}
		<div class="i-sidebar-list-group theme-sidebar-category">

			<h5
				class="pt-4 mb-1 theme-sidebar-category-title"
				data-filter-value="{{#each docs}} {{name}} {{/each}}"
			>
				<a href="#category-{{slug}}" class="i-sidebar-list-item">
					<b>{{key}}</b>
				</a>
			</h5>

			<div>
				{{#each docs}}
					<a
						href="#{{slug}}"
						class="i-sidebar-list-item theme-sidebar-element"
						data-filter-value="{{name}}"
					>
						<span>{{name}}</span>
					</a>
				{{/each}}
			</div>

		</div>
	{{/each}}
</div>

<div class="i-sidebar-filter-no-results i-muted i-pad-horiz-2 theme-sidebar-search-no-results">
	No matches.
</div>

{{#unless (empty sidebar.footer)}}
	<div class="row no-gutters mt-auto py-4 theme-sidebar-footer">
		<span class="col">
			{{#if sidebar.footer}}
				{{{sidebar.footer}}}
			{{else}}
				Generated by <a href='https://github.com/wearelighthouse/lightshow'>Lightshow</a>
			{{/if}}
		</span>
	</div>
{{/unless}}
