<!doctype html>
<html lang="en-us" id="insta">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="x-ua-compatible" content="ie=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		{{#if options.cssFilename}}
			<link rel="stylesheet" href="lightshow/css/{{options.cssFilename}}.css">
		{{/if}}

		<link rel="icon" href="{{favicon}}" type="image/x-icon">

		<!-- @todo Replace with custom icomoon/fontello bundle -->
		<script src="https://use.fontawesome.com/6dd56ad32d.js"></script>

		<title>{{name}}</title>

		{{#each options.theme.css}}
			<link rel="stylesheet" href="{{this}}">
		{{/each}}
	</head>
	<body class="c-page">
		<div class="c-page__content theme-content">

			<div class="c-nav-select theme-mobile-nav">
				<form class="form">
					<select class="form-control form-control-lg theme-mobile-nav-select">
						<option disabled selected>Go toâ€¦</option>
						{{#each groups}}
							<optgroup label="{{key}}">
								{{#each docs}}
									<option value="{{slug}}">{{{name}}}</option>
								{{/each}}
							</optgroup>
						{{/each}}
					</select>
				</form>
			</div>

			{{#each groups}}
				<div
				  id="category-{{slug}}"
				  class="c-content-category c-content-category--{{slug}}"
				>
					{{#each docs}}
						{{{html}}}
					{{/each}}
				</div>
			{{/each}}
		</div>
		<div
			class="c-page__sidebar c-sidebar"
			style="
				{{~#if sidebar.background~}}
					background: {{sidebar.background}};
				{{~/if~}}
				{{~#if sidebar.textColor~}}
					color: {{sidebar.textColor}};
				{{~/if~}}
			"
		>
			{{> sidebar}}
		</div>

		<script src="lightshow/js/vendor/jquery-3.2.1.slim.min.js"></script>
		<script src="lightshow/js/vendor/popper.min.js"></script>
		<script src="lightshow/js/vendor/tether.min.js"></script>
		<script src="lightshow/js/vendor/iframeResizer.min.js"></script>
		<script src="lightshow/js/vendor/lazyframe.min.js"></script>
		<script src="lightshow/js/vendor/highlight.min.js"></script>
		<script src="lightshow/js/vendor/clipboard.min.js"></script>
		<script src="lightshow/js/vendor/in-view.min.js"></script>
		<script src="lightshow/js/app.js"></script>

		{{#each options.theme.js}}
			<script src="{{this}}"></script>
		{{/each}}
	</body>
</html>
