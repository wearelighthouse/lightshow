<h1 class="c-sidebar__header">
	{{#if logo}}
		<img class="c-sidebar__logo" src="{{logo}}" height="40" alt="">
	{{/if}}
	<span class="c-sidebar__title">{{name}}</span>
</h1>

<div class="c-sidebar__search c-search">
	<div class="c-search__input">
		<input id="search-filter" name="filter" type="search" placeholder="Search" class="form-control c-sidebar-item-filter">
		<label for="search-filter" class="search-input-icon icon-search"></label>
		<button type="button" class="i-search-input-reset" aria-label="Clear">
			<i class="icon-cross"></i>
		</button>
	</div>
</div>

<div class="c-sidebar__categories">
	{{#each groups}}
		<div class="c-sidebar__category">

			<h5
				class="c-sidebar__category__title"
				data-filter-value="{{#each docs}} {{name}} {{/each}}"
			>
				<a href="#category-{{slug}}" class="c-sidebar__item">
					{{key}}
				</a>
			</h5>

			<div>
				{{#each docs}}
					<a
						href="#{{slug}}"
						class="c-sidebar__item"
						data-filter-value="{{name}}"
					>
						<span>{{name}}</span>
					</a>
				{{/each}}
			</div>

		</div>
	{{/each}}
</div>

<div class="c-sidebar__filter--no-results">
	No matches.
</div>

{{#unless (empty sidebar.footer)}}
	<div class="c-sidebar__footer">
		<span class="c-sidebar__footer__content">
			{{#if sidebar.footer}}
				{{{sidebar.footer}}}
			{{else}}
				Generated by <a href='https://github.com/wearelighthouse/lightshow'>Lightshow</a>
			{{/if}}
		</span>
	</div>
{{/unless}}
